{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es6", "dom", "es2016"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "useUnknownInCatchVariables": false,
  },
  "include": ["src/**/*.ts", "test/*.ts"],
  "exclude": ["node_modules"]
}
